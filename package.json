{
  "name": "gf-node-framework",
  "version": "1.0.0",
  "description": "搭建依赖库的基础框架,支持rollup打包",
  "main": "index.ts",
  "scripts": {
    "dev": "nodemon --watch src -e ts --exec ts-node -r tsconfig-paths/register --files src/index.ts",
    "test": "nodemon --watch test -e ts --exec ts-node -r tsconfig-paths/register --files test/index.ts",
    "build": "rollup -c --bundleConfigAsCjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gf8023wmm01/gf-node-framework.git"
  },
  "author": "gf",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gf8023wmm01/gf-node-framework/issues"
  },
  "homepage": "https://github.com/gf8023wmm01/gf-node-framework#readme",
  "devDependencies": {
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.3",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint-config-prettier": "^9.0.0",
    "nodemon": "^3.0.1",
    "rollup": "^3.29.1",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-typescript2": "^0.35.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
